<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#729C27B0" />
            <stroke
                android:width="2dp"
                android:color="#729C27B0" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#349C27B0"
                android:endColor="#349C27B0"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#349C27B0" />
        </shape>
    </item>
</selector>